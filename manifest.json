{
	"manifest_version": 2,

	"name": "fanlights.io",
	"description": "Enjoy diamond-cut MLB highlights directly from your fantasy league page",
	"version": "2.0",
	"options_page": "options.html",
	"web_accessible_resources": [
		"options.html",
		"videoIcon.png",
		"carousel.html",
		"carouselFrame.html",
		"/icons/*"
	],
	"permissions": ["storage"],
	"background": {
		"page": "background.html"
	},
	"page_action": {
		"default_icon": { "19": "/icons/icon-19.png" }
	},
	"icons": {
		"48": "/icons/icon-48.png",
		"128": "/icons/icon-128.png"
	},
	"content_scripts": [
		{
			"matches": [
				"https://baseball.fantasysports.yahoo.com/b1/*",
				"http://baseball.fantasysports.yahoo.com/b1/*"
			],
			"js": [
				"/libs/jquery-3.5.1.min.js",
				"helpers.js",
				"carousel.js",
				"/platforms/yahoo.js",
				"content.js"
			],
			"css": ["carousel.css"]
		}
	]
}
